<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/customDarkColor"
    android:orientation="horizontal"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textViewSerial"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/customPrimaryColor"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="1123"
            android:textColor="@color/customSeccondaryColor"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Title"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="User name "
                android:textColor="#BDB8B8"
                android:textSize="18dp"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="2:30"
                android:textColor="#BDB8B8"
                android:textSize="14dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageViewMoreOptionsAction"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/more"/>
    </LinearLayout>
</LinearLayout>